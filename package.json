{
  "name": "glimpse",
  "version": "1.0.0",
  "description": "Select anything on your screen to understand it with AI",
  "author": {
    "name": "Mohil"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohilcode/glimpse"
  },
  "keywords": [
    "electron",
    "screenshot",
    "ai",
    "gemini",
    "desktop",
    "macos",
    "select-to-search",
    "visual-search"
  ],
  "main": "dist/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.mohil.glimpse",
    "productName": "Glimpse",
    "files": [
      "dist/**/*",
      "settings.html",
      "chat.html",
      "icon.png"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon.icns",
      "target": [
        "dmg"
      ]
    },
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.11.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
